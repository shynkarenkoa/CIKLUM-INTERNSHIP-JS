doctype html
html(lang='ru')
  head
    title Ciklum
    meta(charset="utf-8")

    script(src='./script/script.js' defer)

    link(rel='stylesheet', type='text/css', href='./css/style.css')

    mixin navUl(...items)
      nav
        ul
          each item in items
            li
              a(href= '#'+ item)= item

    mixin navSelect(...items)
      nav
        select(onChange="window.location.href=this.value")
          each item in items
            option(value= '#'+ item)= item
   
  body
    header 
      div
        img(src='./img/logo.png', alt='Microsoft logo', width='108', height='23')
        nav
          a Магазин
          a Продукти
          a Підтримка
      div
        input(type='search', title='Пошук на веб-сайті Microsoft.com', value='Пошук на веб-сайті Microsoft.com')
        a  
          img(src='./img/cart.png', alt='Shopping cart')
        a Вхід
    main
